<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Dialog
		title="{i18n>SortBy}"
		class="sapUiPopupWithPadding"
		contentWidth="500px" >
		<content>
        	<List 
			    mode="SingleSelectMaster" >
				<CustomListItem>
					<RadioButton id="VCG" group="sortGroup" text="{i18n>VCG}" />
				</CustomListItem>
				<CustomListItem>
					<RadioButton id="CGV" group="sortGroup" text="{i18n>CGV}" />
				</CustomListItem>
			</List>
		</content>
		<beginButton>
			<Button text="{i18n>OK}" press="onSort" />
		</beginButton>
		<endButton>			
			<Button text="{i18n>Cancel}" press="onDialogClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>