<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<SelectDialog
		title="{i18n>vhDialogResponsibleTitle}"
		class="sapUiPopupWithPadding"
		items="{/ValueHelps}"
		search="_onVhSearchResponsible"
		multiSelect="false"
		confirm="_onVhClose"
		cancel="_onVhClose"
	>
		<StandardListItem
			title="{Description}"
			description="{Code}"
		/>
	</SelectDialog>
</core:FragmentDefinition>